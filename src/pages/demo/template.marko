      <kw-progress size="sm" value=58></kw-progress>
      <kw-progress value=76 tooltip="Please wait while loading..."></kw-progress>

      <kw-slider value=85></kw-slider>
    </section>

    <h3>Bars</h3>
    <style>.chip{margin-right: 1em; }</style>
    <section>
      <kw-chip>Crime</kw-chip>
      <kw-chip>Drama</kw-chip>
      <kw-chip>Biography</kw-chip>
      <kw-chip>Mystyery</kw-chip>
      <br/>
